---
import LibraryIcon from '../icons/Library.astro';
import HomeIcon from '../icons/Home.astro';
import SearchIcon from '../icons/Search.astro';
import SideMenuItem from './SideMenuItem.astro';
---
<nav class="flex flex-col flex-1 gap-2"> 
    <div class="bg-[#121212] rounded-lg p-2">
        <ul>
        <SideMenuItem href="/">
           <HomeIcon />
           Inicio
        </SideMenuItem>
         <SideMenuItem href="/#">
           <SearchIcon />
           Buscar
        </SideMenuItem>
        </ul>
    </div>
    <div class="bg-[#121212] rounded-lg p-2 flex-1">
        <ul>
            <SideMenuItem href="/#">
              <LibraryIcon />
              Tu Biblioteca
            </SideMenuItem>
        </ul>
    </div>
</nav>

<style>
    ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }
</style>